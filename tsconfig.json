{
	"compilerOptions": {
		"target": "ES2018",
		"module": "commonjs",
		"outDir": "dist/",
		"noImplicitAny": true,
		"strictPropertyInitialization": true,
		"strictNullChecks": true,
		"noImplicitReturns": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"baseUrl": "src"
	},
	"include": [
		"src/**/*"
	]
}
